<h1 class="text-center"><%= pluralize(@post.count, "Result")%>  </h1>

<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th> <%= sort_link(@query, :title, "title", defualt_order: :asc) %> </th>
        <th> <%= sort_link(@query, :body, "Blog Content") %> </th>
        <th> <%= sort_link(@query, :user_name, "Users") %> </th>
      </tr> 
    </thead>
    <tbody>
        <% @post.each do |post| %>
      <tr>
        <td> <%= link_to post.title, post %> </td> 
        <td> <%= link_to post.body.to_plain_text.truncate_words(25)%> </td>
        <td> <%= link_to post.user.name, post.user %> </td>
      </tr>
        <% end %>
    </tbody>   
  </table>
</div>